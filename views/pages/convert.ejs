<% layout('../layouts/app') -%>


    <div class='col-12' style='min-height:700px'>
        <div class='row'>
            <div class="col-12 mt-5 pb-5 border-bottom">
                <h2 class='text-center'>Convert Assets</h2>
                <h5 class='text-center'>
                    Fast and easy to convert betwen assets at Bitsten
                </h5>
            </div>
        </div>

        <div class='row d-flex justify-content-center pt-3 '>
            <div class="col-12  col-md-6 mt-5 pb-3 ">
                <span class="float-left">From</span> <span class="float-right">Available : 0 USDT </span>
                <div class="input-group">
                    <input type="text" class="form-control" placeholder="Please enter amount" style='height: 50px;' aria-label="Text input with dropdown button">
                    <div class="input-group-append">
                        <button class="btn btn-outline-secondary dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"> <img src='https://f1.bitsten.com/assets/images/logo/usdt.png' width='25px'> USDT</button>
                        <div class="dropdown-menu">
                            <a class="dropdown-item" href="#"><img src='https://f1.bitsten.com/assets/images/logo/usdt.png' width='25px'> USDT</a>
                            <a class="dropdown-item" href="#"><img src='https://f1.bitsten.com/assets/images/logo/bnb.png' width='25px'> BNB</a>
                            <a class="dropdown-item" href="#"><img src='https://f1.bitsten.com/assets/images/logo/bst.png' width='25px'> BST</a>

                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class='row d-flex justify-content-center  '>
            <div class="col-6 text-center font-weight-bold ">
                <i class="bi bi-arrow-down font-weight-bold"></i> </div>
        </div>

        <div class='row d-flex justify-content-center  '>
            <div class="col-12 col-md-6 mt-2 pb-5 ">
                <span class="left">To</span>
                <div class="input-group">
                    <input type="text" readonly class="form-control" placeholder="Receive" style='height: 50px;' aria-label="Text input with dropdown button">
                    <div class="input-group-append">
                        <button class="btn btn-outline-secondary dropdown-toggle" type="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false"> <img src='https://f1.bitsten.com/assets/images/logo/bnb.png' width='25px'> BNB</button>
                        <div class="dropdown-menu">
                            <a class="dropdown-item" href="#"><img src='https://f1.bitsten.com/assets/images/logo/usdt.png' width='25px'> USDT</a>
                            <a class="dropdown-item" href="#"><img src='https://f1.bitsten.com/assets/images/logo/bnb.png' width='25px'> BNB</a>
                            <a class="dropdown-item" href="#"><img src='https://f1.bitsten.com/assets/images/logo/bst.png' width='25px'> BST</a>

                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class='row d-flex justify-content-center  '>
            <div class="col-6 col-md-4 text-center ">
                <button id='button_convert' class='btn col-12 btn-warning btn-sm rounded-0 p-2 pr-3 pl-3'>Enter Amount</button>
            </div>


        </div>