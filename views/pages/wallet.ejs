                                                                        <div class="form-group d-flex justify-content-center">
                                                                            <button type="submit" class="btn network network0 btn-sm rounded-0 btn-outline-dark coin_name" disbled>BTC</button>
                                                                            <button type="submit" class="btn network network3 btn-sm rounded-0 btn-outline-dark " disabled>BEP20</button>
                                                                            <button type="submit" class="btn network network1 btn-sm rounded-0 btn-outline-dark  " disabled>ERC20</button>
                                                                            <button type="submit" class="btn network network2 btn-sm rounded-0 btn-outline-dark  " disabled>TRC20</button>

                                                                        </div>


                                                                        <div class="input-group input-group-sm mb-3">
                                                                            <select class="custom-select" id="inputGroupSelect02">
                                                                              <option selected>Choose...</option>
                                                                              <option value="1">Onuuuuuuuuuuuuuuuuuuuuuuuggfgxfhcxgcgkvgvcghcgcghcghe</option>
                                                                               
                                                                            </select>
                                                                            <div class="input-group-append">
                                                                                <label class="input-group-text btn-outline-warning btn" onClick="$('#laddr').show()" for="inputGroupSelect02">Option</label>
                                                                            </div>
                                                                        </div>



                                                                        <div class="form-group">
                                                                            <input type="number" class="form-control" placeholder="Amount"></div>

                                                                        <div class="form-group">
                                                                            <div class="input-group mb-2">

                                                                                <input class=" form-control " type="text" id="code" placeholder="Email Code">
                                                                                <div class="input-group-append  ">
