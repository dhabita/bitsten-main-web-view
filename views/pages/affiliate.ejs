    <script>
        $(document).ready(function() {
            $.ajaxSetup({
                headers: {
                    //  'Authorization': 'Bearer ' + getCookie("token")
                }
            });
            $.get("https://api3.bitsten.com/public/data/referral")
                .done(function(d) {
                    // console.log(  data );
                    if (d.status) {
                        //.log(d.data);
                        let fw = d.data.total[0].t * 0.01;

                        let r = {};
                        d.data.reward.forEach(e => {
                            let i = "r-" + e.userid;
                            r[i] = e.t;
                        });

                        //console.log(r);
                        d.data.total.forEach(e => {
                            let i = "r-" + e.id;
                            let bg = "bg-success";
                            if ((e.t / fw) < 75) bg = "bg-primary";
                            if ((e.t / fw) < 50) bg = "bg-warning";
                            if ((e.t / fw) < 25) bg = "bg-danger";


                            $("#bst").append(`
                        <div class='row mt-2'>
                            <div class="col-md-2  pt-1 font-weight-bold text info">
                                ${e.username}
                            </div>
                            <div class="col-md-8">
                                <div class="progress font-weight-bold " style="height: 30px;">
                                    <div class="progress-bar ${bg}" role="progressbar" style="width: ${(e.t/fw)}%;" aria-valuenow="${(e.t/fw)} Referral" aria-valuemin="0" aria-valuemax="100">${(e.t).toFixed(0)}  </div>
                                </div>
                            
                            </div>
                            <div class="col-md-2  pt-1 font-weight-bold text info">
                                ${r[i]*1>0?r[i]*1:0} BST
                            </div>
                        </div>`);
                        })
                    }

                });
        })
    </script>


